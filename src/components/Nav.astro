---
import ThemeToggle from './ThemeToggle.astro';
import Quadtree from './Quadtree.astro';
import Avatar from '../components/Avatar.astro';

const currentPath = Astro.url.pathname;

---

<a href="#content" class="skip-link visually-hidden-focusable">Skip to content</a>
<header class="banner wrapper">
  <a href="/" class="logo">
    <Avatar />
    <span class="sr-only">Dan Matthew</span>
  </a>

  <nav>
    {currentPath === '/notes' ? <a href="/notes" aria-current="page">Notes</a> : <a href="/notes">Notes</a>}

    {currentPath === '/work' ? <a href="/work" aria-current="page">Work</a> : <a href="/work">Work</a>}
  </nav>
</header>
