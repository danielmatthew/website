---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactCTA from "../components/ContactCTA.astro";
---
<BaseLayout title="Dan Matthew - UX Engineer">
    <h1>Hello, world!</h1>

    <ContactCTA />
</BaseLayout>
<style>
  :root {
    --color-light: #000;
    --color-dark: #eaeaea;
    --color-background: #112CAF;

    --scheme-color: var(--color-light);
  }


  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
      Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
      sans-serif;
    margin: 0;
    padding: 0;

    display: grid;
    grid-template-rows: 2fr 1fr;

    height: calc(100vh);
    color: var(--scheme-color);
    background-color: var(--color-background);
    background-image: linear-gradient(180deg, #183DD1 0%, #112CAF 72.51%);
    background-repeat: no-repeat;
  }

  main {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  footer {
    align-self: flex-end;
  }

  svg {
    display: block;
    max-width: 100%;
    height: auto;
  }

  h1 {
    font-family: 'Playfair Display', serif;
    font-weight: 700;
    font-size: 128px;
  }

  form {
    font-size: 1.125rem;
  }

  .form-group + .form-group {
    margin-top: 1.5em;
  }

  label {
    display: block;
    margin-bottom: 0.5em;
    line-height: 1;
  }

  input, textarea, button, .form-field {
    box-sizing: border-box;
    display: block;
    width: 100%;
    border: 2px solid var(--scheme-color);
    border-radius: 0.25rem;
    padding: 0.25em 0.5em;
    margin-bottom: 1rem;
    font-family: inherit;
    font-size: 16px;
    font-size: max(16px, 1em);
  }

  .form-button {
    border: none;
    background-color: transparent;
    font-family: inherit;
    font-size: 1.125rem;
    padding: 0;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--border-radius, 0.25rem);
    min-width: 10ch;
    min-height: 44px;
    text-align: center;
    line-height: 1;
    background-color: #D13745;
    color: #fff;
    transition: 180ms all ease-in-out;
  }

  .form-button:hover,
  .form-button:focus {
    outline-style: solid;
    outline-color: transparent;
    box-shadow: 0 0 0 0.05em currentColor, 0 0 0.15em 0.15em #e5653f;
  }

  .field-error {
    color: var(--color-error, #D13745);
  }

  .field-error .field-description {
    display: flex;
    align-items: center;
    opacity: 1;
  }

  .field-error .field-description:before {
    content: '';
    width: 0.8em;
    height: 0.8em;
    line-height: 1;
    margin-right: 0.5em;
  }

  @media screen and (-ms-high-contrast: active) {
    .form-button {
      border: 2px solid currentColor;
    }
  }

  :is(input,textarea, button):focus {
    outline: 2px solid var(--scheme-color);
    outline-offset: 2px;
    box-shadow: 0 0 0.35em -0.1em var(--scheme-color);
  }

  @media(prefers-color-scheme: dark) {
    :root {
      --scheme-color: var(--color-dark);
    }

    body {
      color: var(--scheme-color);
    }

    input, textarea, button {
    border: 2px solid var(--scheme-color);
  }

  :is(input,textarea, button):focus {
    outline-color: var(--scheme-color);
  }
  }
</style>
<script>
  const handleSubmit = (event) => {
    event.preventDefault();

    const form = event.target;
    const formData = new FormData(form);

    fetch('/', {
      method: 'POST',
      headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
      body: new URLSearchParams(formData).toString()
    })
    .then(() => console.info('Form successfully submitted'))
    .then(() => form.reset());
  };

  document.forms[0].addEventListener('submit', handleSubmit);
</script>
