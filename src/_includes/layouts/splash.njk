      <h1 class="c-hero__title">Dan Matthew</h1>
    </header>
    <main id="main-content" tabindex="-1">
      {% include "partials/components/post-list.njk" %}
    </main>
    {% include "partials/global/site-foot.njk" %}
    {% block foot %}{% endblock %}
